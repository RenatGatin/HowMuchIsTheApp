<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ca.gatin.howmuchistheapp.activity.ChoosePlatformActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Logged in by: "
        android:id="@+id/tvLogged"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tvLoggedInBy"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="none"
        android:textStyle="bold|italic" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="31dp" />

    <TextView
        android:text="@string/what_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvWhatApp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/tvLoggedInBy"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/what_app_desc"
        android:id="@+id/tvWhatAppDesc"
        android:gravity="center"
        android:layout_below="@+id/tvWhatApp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android"
        android:id="@+id/btnAndroid"
        android:layout_marginTop="39dp"
        android:onClick="onGetStartedBtnClick"
        android:layout_below="@+id/tvWhatAppDesc"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="iOS"
        android:id="@+id/btnIos"
        android:onClick="onGetStartedBtnClick"
        android:layout_below="@+id/btnAndroid"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android &amp; iOS"
        android:id="@+id/btnBoth"
        android:layout_marginTop="33dp"
        android:onClick="onGetStartedBtnClick"
        android:layout_below="@+id/btnIos"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
