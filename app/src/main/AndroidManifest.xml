<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.gatin.howmuchistheapp" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name=".activity.CreateAccountActivity"
            android:label="@string/title_activity_create_account" >
        </activity>
        <activity
            android:name=".activity.ChoosePlatformActivity"
            android:label="@string/title_activity_choose_platforms" >
        </activity>
        <activity
            android:name=".activity.ChooseWebActivity"
            android:label="@string/title_activity_choose_web" >
        </activity>
        <activity
            android:name=".activity.SummaryActivity"
            android:label="@string/title_activity_summary" >
        </activity>
        <activity
            android:name=".activity.PayActivity"
            android:label="@string/title_activity_pay" >
        </activity>
    </application>

</manifest>
